<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wihte"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wihte"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/log" />

            <EditText
                android:id="@+id/register_id"
                style="@style/editTextStyle"
                android:hint="身份证号码" />

            <EditText
                android:id="@+id/register_name"
                style="@style/editTextStyle"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:hint="姓名" />

            <EditText
                android:id="@+id/register_phone"
                style="@style/editTextStyle"
                android:hint="手机号" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/register_code"
                    style="@style/editTextStyle"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="left|center_vertical"
                    android:hint="输入验证码"
                    android:maxLength="6"
                    android:paddingLeft="50dp" />

                <TextView
                    android:id="@+id/get_code_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/get_code_on"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/wihte"
                    android:textSize="20sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/enable_btn_off"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/wihte"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>