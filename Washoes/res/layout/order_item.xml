<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/order_item_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_item_head_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/order_item_text_V_padding"
        android:paddingTop="@dimen/order_item_text_V_padding" >

        <TextView
            android:id="@+id/order_item_text_data"
            style="@style/orderItem"
            android:drawableLeft="@drawable/order_item_date"
            android:text="data"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/order_item_text_time"
            style="@style/orderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/order_item_text_price"
            style="@style/orderItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/order_item_text_H_padding"
            android:text="price"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/order_item_text_V_padding"
        android:paddingTop="@dimen/order_item_text_V_padding" >

        <TextView
            android:id="@+id/order_item_text_username"
            style="@style/orderItem"
            android:drawableLeft="@drawable/order_item_user"
            android:text="username" />

        <TextView
            android:id="@+id/order_item_text_usertype"
            style="@style/orderItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/order_item_text_H_padding"
            android:text="usertype"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_item_text_phone"
                style="@style/orderItem"
                android:drawableLeft="@drawable/order_item_phone"
                android:paddingBottom="@dimen/order_item_text_V_padding"
                android:paddingTop="@dimen/order_item_text_V_padding"
                android:text="phone" />

            <TextView
                android:id="@+id/order_item_text_id"
                style="@style/orderItem"
                android:drawableLeft="@drawable/order_item_id"
                android:paddingBottom="@dimen/order_item_text_V_padding"
                android:paddingTop="@dimen/order_item_text_V_padding"
                android:text="id" />
        </LinearLayout>

        <ImageView
            android:id="@+id/order_item_img_camare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/order_item_text_H_padding"
            android:src="@drawable/order_item_carame" />
    </LinearLayout>

</LinearLayout>